            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="#c0c0c0"

            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/product_list" />

        <ImageButton
            android:id="@+id/customer_search"
            android:layout_width="48dp"
            android:layout_height="40dp"
            android:layout_marginRight="8dp"
            android:background="@color/colorPrimaryDark"
            android:backgroundTint="@color/colorPrimaryDark"
            app:layout_constraintBottom_toBottomOf="@+id/customer_name_key"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@drawable/ic_search_black_24dp" />

        <ImageButton
            android:id="@+id/stock_group_search"
            android:layout_width="48dp"
            android:layout_height="40dp"
            android:background="@color/colorPrimaryDark"
            android:backgroundTint="@color/colorPrimaryDark"
            app:layout_constraintBottom_toBottomOf="@+id/stock_group_key"
            app:layout_constraintRight_toRightOf="@+id/stock_group_key"
            app:srcCompat="@drawable/ic_search_black_24dp" />

        <ImageButton
            android:id="@+id/product_search"
            android:layout_width="48dp"
            android:layout_height="40dp"
            android:layout_marginRight="8dp"
            android:background="@color/colorPrimaryDark"
            android:backgroundTint="@color/colorPrimaryDark"
            app:layout_constraintBottom_toBottomOf="@+id/product_key"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@drawable/ic_search_black_24dp" />

