            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/round_off_value"
            app:layout_constraintEnd_toStartOf="@+id/round_off_value"
            app:layout_constraintTop_toTopOf="@+id/round_off_value"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/round_off_value"
            android:layout_width="64dp"
            android:layout_height="40dp"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:inputType="numberDecimal"
            android:padding="5dp"
            android:text=""
            android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
            app:layout_constraintEnd_toEndOf="@+id/discount_value"
            app:layout_constraintTop_toBottomOf="@+id/discount_value" />

        <Spinner
            android:id="@+id/discount"
            android:layout_width="0dp"

            android:layout_height="30dp"
            android:layout_marginRight="8dp"

